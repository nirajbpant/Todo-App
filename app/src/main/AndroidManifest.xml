<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.todomvvm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".screens.login.LoginActivity" android:screenOrientation="fullSensor"></activity>
        <activity android:name=".screens.splash.SplashActivity" android:theme="@style/StyleTheme" android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.addedittask.AddEditTaskActivity"
            android:label="Add a new Task" />
        <activity android:name=".screens.tasks.TaskListActivity"
            android:launchMode="singleTop"/>
        <receiver android:name=".data.notification.ReminderBroadcast"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>